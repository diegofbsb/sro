=====================================================
*/

.btnflt{
   font-size:11px;
   margin:0 2px 0 2px;
   padding:0 1px 0 1px;
   text-decoration:none; 
   color: #fff;
   background-color:#666;
}
.flt{ 
   color: #000;
   background-color:#f4f4f4; 
   border:1px inset #ccc;
   margin:0; 
   width:100%;
}
.flt_s{
   color: #000;
   background-color:#f4f4f4;
   border:1px inset #ccc; 
   margin:0;
   width:90%;
}
.inf{ 
   clear:both; 
   width:auto; 
   height:20px; 
   color: #000;
   background:#f4f4f4; 
   font-size:11px; 
   margin:0; 
   padding:1px 3px 1px 3px; 
   border:1px solid #ccc;
}
.ldiv{
   float:left;
   width:30%;
   position:inherit;
}
.mdiv{
   float:left;
   width:30%;
   position:inherit;
   text-align:center;
}
.rdiv{
   float:right;
   width:30%;
   position:inherit;
   text-align:right;
}
.loader{ 
   position:absolute;
   padding: 15px 0 15px 0;
   margin-top:7%;
   width:200px;
   /*height:50px;*/
   left:40%;
   z-index:1000;
   font-size:14px;
   font-weight:bold;
   border:1px solid #666;
   color: #000;
   background:#f4f4f4; 
   text-align:center;
   vertical-align:middle;
}
div.mdiv select{
   height:20px;
}
div.inf a{ 
   color:#CC0000; 
   background-color:#f4f4f4;
}
div.inf a:hover{
   text-decoration:none;
}
.tot{
   font-weight:bold;
}